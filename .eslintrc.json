{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-useless-constructor":"off",
        "indent": ["error", 2]
    },
   "overrides": [
    {
        "files": [ "*.spec.ts" ],
        "rules": {
          "no-undef": 0
        }
    }
   ] 
}
